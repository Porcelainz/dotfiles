{
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "Maple Mono NF CN",
  "editor.fontLigatures": true,
  "files.autoSave": "onFocusChange",
  "terminal.integrated.env.osx": {
    "CW_NEW_SESSION": "1",
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.fontFamily": "Maple Mono NF CN",
  "terminal.integrated.fontSize": 14,
  "window.autoDetectHighContrast": false,
  "javascript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": false,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "editor.semanticHighlighting.enabled": true,
  "window.titleBarStyle": "custom",
  "editor.semanticTokenColorCustomizations": {
    "[Catppuccin Mocha]": {
      "enabled": true
    },
    "[Catppuccin Macchiato]": {
      "enabled": true
    },
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "terminal.integrated.lineHeight": 0,
  "markdown.preview.lineHeight": 0,
  "editor.lineHeight": 22,
  "editor.formatOnSave": true,
  "go.useLanguageServer": true,
  "editor.inlineSuggest.suppressSuggestions": true,
  "go.inlayHints.assignVariableTypes": true,
  "go.inlayHints.functionTypeParameters": true,
  "go.inlayHints.parameterNames": true,
  "go.inlayHints.rangeVariableTypes": true,
  "diffEditor.codeLens": true,
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--fast"
  ],
  "go.lintOnSave": "package",
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "ui.semanticTokens": true,
    "staticcheck": true
  },
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "workbench.iconTheme": "catppuccin-latte",
  "editor.codeLensFontFamily": "Maple Mono NF CN",
  "editor.inlayHints.fontFamily": "Maple Mono NF CN",
  "editor.inlineSuggest.fontFamily": "Maple Mono NF CN",
  "debug.console.fontFamily": "Maple Mono NF CN",
  "scm.inputFontFamily": "Maple Mono NF CN",
  "terminal.integrated.fontLigatures.enabled": true,
  "chat.editor.fontFamily": "Maple Mono NF CN",
  "errorLens.fontFamily": "Maple Mono NF CN",
  "workbench.editor.empty.hint": "hidden",
  "diffEditor.renderSideBySide": false,
  "editor.fontWeight": "normal",
  "editor.fontVariations": false,
  "editor.fontSize": 14,
  "editor.tabCompletion": "on",
  "catppuccin.italicComments": false,
  "catppuccin.italicKeywords": false,
  "workbench.colorTheme": "Catppuccin Latte",
  "catppuccin.accentColor": "rosewater",
  "terminal.integrated.minimumContrastRatio": 1,
  "background.enabled": false,
  "workbench.colorCustomizations": {
    "editorInlayHint.foreground": "#99adb4",
    "editorInlayHint.background": "#00000000",
    "editorInlayHint.typeForeground": "#99adb4",
    "editorInlayHint.typeBackground": "#00000000",
    "editorInlayHint.parameterForeground": "#99adb4",
    "editorInlayHint.parameterBackground": "#00000000",
  },
  // 新版改成針對不同區域設定，我們專注在 "editor" (編輯區) 就好
  "background.fullscreen": {
    // 圖片路徑 (Mac)
    "useFront": false,
    "images": [
      "file:///Users/porcelain_/Pictures/sailor_moon_day2.png"
    ],
    // 樣式設定
    "opacity": 0.05, // 散光保命設定，維持 0.1
    "size": "cover", // cover = 鋪滿整個視窗，不管視窗怎麼拉都會填滿
    "position": "center", // 圖片置中
    "interval": 0, // 關閉輪播
    "random": false
  },
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.compositeKeys": {
    "qq": {
      "command": "vscode-neovim.escape"
    }
  },
  "vscode-neovim.compositeTimeout": 200,
  "workbench.productIconTheme": "bongocat",
  "terminal.integrated.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.guides.bracketPairs": true,
  // 2. 開啟一般的縮排引導線
  "editor.guides.indentation": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.inlayHints.enabled": "on",
  "json.schemaDownload.enable": true,
  "git.autofetch": true,
  "editor.acceptSuggestionOnEnter": "off",
}