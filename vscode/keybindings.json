[
    // ========================================================
    // ğŸªŸ è¦–çª—å°èˆª (Window Navigation - HJKL) 12/28
    // ========================================================
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown"
    },
    // ========================================================
    // ğŸŒ² æª”æ¡ˆç¸½ç®¡å°èˆª (File Explorer - HJKL)
    // ========================================================
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "k",
        "command": "list.focusUp",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "l",
        "command": "list.select", // æ‰“é–‹æª”æ¡ˆ / å±•é–‹è³‡æ–™å¤¾
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "h",
        "command": "list.collapse", // æ”¶åˆè³‡æ–™å¤¾
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "enter",
        "command": "list.select",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // ========================================================
    // ğŸš€ ç¨‹å¼ç¢¼å°èˆªèˆ‡å®šç¾© (Alt ç³»åˆ—)
    // ========================================================
    {
        "key": "alt+d",
        "command": "editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus"
    },
    {
        "key": "f12",
        "command": "-editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus"
    },
    {
        "key": "alt+2",
        "command": "editor.action.peekDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    {
        "key": "alt+f12",
        "command": "-editor.action.peekDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    // --- å¼•ç”¨ (References) ---
    {
        "key": "alt+1",
        "command": "references-view.findReferences",
        "when": "editorHasReferenceProvider"
    },
    {
        "key": "shift+alt+f12",
        "command": "-references-view.findReferences",
        "when": "editorHasReferenceProvider"
    },
    {
        "key": "alt+q",
        "command": "editor.action.goToReferences",
        "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    {
        "key": "shift+f12",
        "command": "-editor.action.goToReferences",
        "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    // --- å¼•ç”¨/æœå°‹çµæœå°èˆª (Next/Prev) ---
    {
        "key": "alt+4",
        "command": "references-view.next",
        "when": "reference-list.hasResult && references-view.canNavigate"
    },
    {
        "key": "f4",
        "command": "-references-view.next",
        "when": "reference-list.hasResult && references-view.canNavigate"
    },
    {
        "key": "alt+3",
        "command": "references-view.prev",
        "when": "reference-list.hasResult && references-view.canNavigate"
    },
    {
        "key": "shift+f4",
        "command": "-references-view.prev",
        "when": "reference-list.hasResult && references-view.canNavigate"
    },
    // ========================================================
    // ğŸ§¹ è§£é™¤ VS Code é è¨­è¡çª
    // ========================================================
    {
        "key": "ctrl+1",
        "command": "-workbench.action.focusFirstEditorGroup"
    },
    {
        "key": "ctrl+2",
        "command": "-workbench.action.focusSecondEditorGroup"
    },
    {
        "key": "alt+1",
        "command": "-workbench.action.openEditorAtIndex1"
    },
    {
        "key": "alt+2",
        "command": "-workbench.action.openEditorAtIndex2"
    },
    {
        "key": "alt+3",
        "command": "-workbench.action.openEditorAtIndex3"
    },
    {
        "key": "alt+4",
        "command": "-workbench.action.openEditorAtIndex4"
    },
    // ========================================================
    // ğŸ› ï¸ ç·¨è¼¯å™¨è¼”åŠ©åŠŸèƒ½
    // ========================================================
    {
        "key": "ctrl+capslock",
        "command": "editor.action.quickFix",
        "when": "editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+oem_period",
        "command": "-editor.action.quickFix",
        "when": "editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+z",
        "command": "-redo"
    },
    {
        "key": "ctrl+p",
        "command": "-extension.vim_ctrl+p",
        "when": "editorTextFocus && vim.active && vim.use<C-p> && !inDebugRepl || vim.active && vim.use<C-p> && !inDebugRepl && vim.mode == 'CommandlineInProgress' || vim.active && vim.use<C-p> && !inDebugRepl && vim.mode == 'SearchInProgressMode'"
    },
    // ========================================================
    // ğŸŒ¿ Git & Terminal
    // ========================================================
    {
        "key": "alt+oem_3",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp",
        "when": "terminalFocus"
    },
    // ========================================================
    // ğŸ“‹ å‰ªè²¼ç°¿æ§åˆ¶ (Ctrl+C/V/X)
    // ========================================================
    {
        "key": "ctrl+c",
        "command": "editor.action.clipboardCopyAction",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+v",
        "command": "editor.action.clipboardPasteAction",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+x",
        "command": "editor.action.clipboardCutAction",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+c",
        "command": "-vscode-neovim.send",
        "when": "editorTextFocus && neovim.ctrlKeysNormal.c"
    },
    {
        "key": "ctrl+v",
        "command": "-vscode-neovim.send",
        "when": "editorTextFocus && neovim.ctrlKeysNormal.v"
    },
    {
        "key": "ctrl+x",
        "command": "-vscode-neovim.send",
        "when": "editorTextFocus && neovim.ctrlKeysNormal.x"
    }
]